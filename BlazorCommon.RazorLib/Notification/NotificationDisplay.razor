<div class="bcrl_notification @(NotificationRecord.CssClassString ?? string.Empty)"
     style="@CssStyleString">
    <div class="bcrl_notification-toolbar">
        <div class="bcrl_notification-title">
            @NotificationRecord.Title
        </div>

        <div class="bcrl_notification-control-buttons">
            @* TODO: I don't want to cross reference the Blazor{lib_name_here}. Instead I want to only have them all reference the BlazorShared project and communicate amongst themselves through interfaces if needed. I need to look into this. *@
            @* <button class="bcrl_button" @onclick="ChangeNotificationToDialog"> *@
            @*     <IconEmptyWindow/> *@
            @* </button> *@
            <button class="bcrl_button" @onclick="DisposeNotification">
                <IconClose/>
            </button>
        </div>
    </div>

    <div class="bcrl_notification-body">
        <CascadingValue Value="NotificationRecord">
            <DynamicComponent Type="NotificationRecord.RendererType"
                              Parameters="NotificationRecord.Parameters"/>
        </CascadingValue>
    </div>
</div>